{
	"image": "ghcr.io/ludeeus/devcontainer/integration:stable",
	"context": "..",
	"appPort": [
		"9123:8123"
	],
	"postCreateCommand": "container install",
	"runArgs": [
		"-v",
		"${env:HOME}${env:USERPROFILE}/.ssh:/tmp/.ssh",
		"--network",
		"mynet",
		"--mount",
		"type=bind,source=/home/gary/Source/geckolib/src/geckolib,target=/usr/local/python/lib/python3.10/site-packages/geckolib,readonly",
		"--mount",
		"type=bind,source=/home/gary/Source/geckolib,target=/workspaces/gecko-home-assistant/geckolib"
	],
	"extensions": [
		"ms-python.python",
		"github.vscode-pull-request-github",
		"tabnine.tabnine-vscode"
	],
	"settings": {
		"files.eol": "\n",
		"editor.tabSize": 4,
		"terminal.integrated.shell.linux": "/bin/bash",
		"python.pythonPath": "/usr/bin/python3",
		"python.linting.pylintEnabled": false,
		"python.linting.flake8Enabled": true,
		"python.linting.mypyEnabled": true,
		"python.linting.enabled": true,
		"editor.formatOnPaste": false,
		"editor.formatOnSave": true,
		"editor.formatOnType": true,
		"editor.defaultFormatter": null,
		"python.formatting.provider": "black",
		"files.trimTrailingWhitespace": true
	}
}